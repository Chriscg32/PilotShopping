# Application Settings
APP_NAME=Multi-Agent System with Hugging Face
VERSION=0.3.0
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_API_URL=https://api-inference.huggingface.co/models
HUGGINGFACE_TIMEOUT=30

# Default Models
DEFAULT_TEXT_MODEL=microsoft/DialoGPT-medium
DEFAULT_SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest
DEFAULT_CODE_MODEL=microsoft/CodeBERT-base
DEFAULT_MARKETING_MODEL=gpt2

# Model Configuration
MAX_TOKENS=512
TEMPERATURE=0.7
TOP_P=0.9
FREQUENCY_PENALTY=0.0
PRESENCE_PENALTY=0.0

# Agent Configuration
AGENT_TIMEOUT=60
MAX_CONCURRENT_TASKS=10
TASK_RETRY_ATTEMPTS=3

# Database (Optional)
DATABASE_URL=sqlite:///./data/agents.db
DATABASE_ECHO=false

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_TIMEOUT=5

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=.txt,.md,.py,.js,.html,.css,.json,.yaml,.yml

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]